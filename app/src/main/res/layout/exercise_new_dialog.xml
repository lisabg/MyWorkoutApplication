<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

    <EditText
            android:id="@+id/new_exercise_title_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:hint="@string/exercise_title_hint"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="2000"
            android:maxLines="5" />

    <EditText
            android:id="@+id/new_exercise_description_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:hint="@string/exercise_description_hint"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="2000"
            android:maxLines="5" />

    <EditText
            android:id="@+id/new_exercise_repetition_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/exercise_repetition_hint"
            android:inputType="number"
            android:maxLength="4" />

    <EditText
            android:id="@+id/new_exercise_sets_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/exercise_sets_hint"
            android:inputType="number"
            android:maxLength="4" />

    <EditText
            android:id="@+id/new_exercise_weight_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/exercise_weight_hint"
            android:inputType="number"
            android:maxLength="5" />

    <EditText
            android:id="@+id/new_exercise_goal_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/exercise_goal_hint"
            android:inputType="number"
            android:maxLength="5" />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingTop="7dp">

        <Button
                android:id="@+id/add_exercise_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_cancel_button_title" />

        <Button
                android:id="@+id/add_exercise_submit_button"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_add_button_title" />

    </LinearLayout>
</LinearLayout>